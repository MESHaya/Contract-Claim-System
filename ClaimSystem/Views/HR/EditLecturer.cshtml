@model ClaimSystem.Models.Lecturer

@{
    ViewData["Title"] = "Edit Lecturer";
}

<form asp-action="EditLecturer" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Contact Info:</label>
        <input asp-for="ContactInfo" />
    </div>
    <button type="submit">Save</button>
</form>
