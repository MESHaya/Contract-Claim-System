@model ClaimSystem.Models.Lecturer

@{
    ViewData["Title"] = "Generate Invoice";
}

<h1>Generate Invoice</h1>
<p>Select the details for the invoice and click Generate:</p>
<form method="post" asp-action="DownloadInvoice">
    <label for="lecturerId">Lecturer ID:</label>
    <input type="number" id="lecturerId" name="lecturerId" required />
    <br />
    <label for="month">Month:</label>
    <input type="month" id="month" name="month" required />
    <br />
    <button type="submit">Generate Invoice</button>
</form>
