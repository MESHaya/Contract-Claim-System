@model ClaimSystem.Models.Invoice

@{
    ViewData["Title"] = "Generate Report";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice - @Model.InvoiceNumber</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        .header, .footer {
            text-align: center;
            margin-top: 20px;
        }

        .total {
            font-weight: bold;
        }

        .note {
            margin-top: 20px;
            font-size: 0.9em;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Invoice</h1>
        <p>Random Company  </p>
        <p>1234 Address Street, City, Country</p>
        <p>Email: example@company.com | Phone: 123-456-7890</p>
    </div>

    <hr>

    <div>
        <p><strong>Invoice Number:</strong> @Model.InvoiceNumber</p>
        <p><strong>Date:</strong> @Model.InvoiceDate.ToShortDateString()</p>
        <p><strong>Period:</strong> @Model.PeriodStart.ToShortDateString() - @Model.PeriodEnd.ToShortDateString()</p>
    </div>

    <div>
        <p><strong>To:</strong></p>
        <p>HR Department</p>
        <p>Email: hr@example.com</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer Name</th>
                <th>Date Submitted</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.DateSubmitted.ToShortDateString()</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@(claim.HoursWorked * claim.HourlyRate).ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" class="total">Total Amount:</td>
                <td class="total">@Model.TotalAmount.ToString("C")</td>
            </tr>
        </tfoot>
    </table>

    <div class="note">
        <p><strong>Payment Instructions:</strong></p>
        <p>Account Name: Your Company</p>
        <p>Account Number: 123456789</p>
        <p>Bank Name: Your Bank</p>
        <p>Branch Code: 1234</p>
        <p>Payment due within 30 days. Thank you!</p>
    </div>

    <hr>

    <div class="footer">
        <p>Generated by Your Company</p>
        <p>Contact us: example@company.com</p>
    </div>
</body>
</html>
